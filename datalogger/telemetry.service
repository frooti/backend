[Unit]
 Description=telemetry
 After=multi-user.target

 [Service]
 Type=idle
 ExecStartPre=/projects/backend/ENV/bin/source activate
 ExecStart=nohup /projects/backend/ENV/bin/python /projects/backend/datalogger/telemetry.py >> /var/log/telemetry.log 2>&1 &
 Restart=always

[Install]
 WantedBy=multi-user.target