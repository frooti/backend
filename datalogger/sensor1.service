[Unit]
 Description=sensor1
 After=multi-user.target

 [Service]
 Type=idle
 ExecStartPre=/projects/backend/ENV/bin/source activate 
 ExecStart=nohup /projects/backend/ENV/bin/python /projects/backend/datalogger/sensor1.py >> /var/log/sensor1.log 2>&1 &
 Restart=always

[Install]
 WantedBy=multi-user.target